<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Einstellungen"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Benachrichtigungen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benachrichtigungen"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/notificationsSwitch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="Aktiviere Benachrichtigungen" />

        <!-- Warnung bei hoher Datennutzung -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warnung bei hoher Datennutzung"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/usageWarningSwitch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="Aktiviere Warnung bei hoher Datennutzung" />

        <!-- Warnschwelle für Datennutzung -->
        <TextView
            android:id="@+id/thresholdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warnschwelle für Datennutzung"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/thresholdValue"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="500 MB"
                android:textSize="16sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/adjustThreshold"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="Anpassen"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>