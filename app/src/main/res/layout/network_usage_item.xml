<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- App-Icon auf der linken Seite -->
    <ImageView
        android:id="@+id/appIconImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- App-Name in der oberen Hälfte -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="App Name"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/appIconImageView"
        app:layout_constraintEnd_toStartOf="@id/dataUsageTextView"
        app:layout_constraintBottom_toTopOf="@id/dataUsageTextView"
        android:layout_marginStart="16dp"
        android:gravity="start"/>

    <!-- Gesamte Datennutzung auf der rechten Seite, rechtsbündig -->
    <TextView
        android:id="@+id/dataUsageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 MB"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/appNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="end"/>

</androidx.constraintlayout.widget.ConstraintLayout>